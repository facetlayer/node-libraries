{
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "lib": ["es2021"],
    "target": "es2018",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": false
  },
  "exclude": [
    "node_modules",
    "src/__tests__/**",
    "**/*.test.ts"
  ]
}
