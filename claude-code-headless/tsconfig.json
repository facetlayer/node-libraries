{
  "compilerOptions": {
    "lib": ["es2021"],
    "target": "es2020",
    "declaration": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "strict": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "dist",
    "incremental": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "src/__tests__", "**/*.test.ts"]
}
