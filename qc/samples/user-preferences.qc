# User Preferences Configuration
# Personal settings and preferences for various applications

# User profile
user
    name="Alice Johnson"
    email="alice@example.com"
    timezone="America/New_York"
    language=en-US

# Theme and appearance
theme
    name="dark-mode"
    primary-color="#2196F3"
    accent-color="#FF5722"
    font-family="Roboto"
    font-size=14

# Editor preferences
editor
    tab-size=4
    word-wrap=true
    line-numbers=true
    syntax-highlighting=true
    auto-save=true
    theme="monokai"

# Notification settings
notifications
    email=true
    push=false
    desktop=true
    sound=false
    frequency="daily"

# Privacy settings
privacy
    analytics=false
    tracking=false
    cookies=essential-only
    data-sharing=false

# Application-specific settings
vscode
    auto-format=true
    minimap=false
    breadcrumbs=true
    word-wrap=true

browser
    homepage="https://github.com"
    search-engine=google
    ad-blocker=true
    javascript=true
    cookies=selective

terminal
    shell="/bin/zsh"
    color-scheme="solarized-dark"
    transparency=0.9
    font="Fira Code"

# Social media preferences
social
    twitter-notifications=false
    linkedin-visibility=connections-only
    github-activity=public

# Backup and sync
backup
    enabled=true
    frequency="weekly"
    cloud-provider=google-drive
    encryption=true

# Accessibility
accessibility
    high-contrast=false
    large-text=false
    screen-reader=false
    keyboard-navigation=true