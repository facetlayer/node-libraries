{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "es2020",
    "declaration": true,
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "rootDir": "src",
    "outDir": "dist",
    "incremental": true
  },
  "include": [
      "src/**/*.ts",
      "src/*.ts"
  ],
  "exclude": ["node_modules", "web", "**/*.tsx"]
}
