{
  "name": "@facetlayer/local-logs",
  "version": "0.1.0",
  "description": "Logging library that stores events in a local SQLite database",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "local-logs": "dist/cli.js"
  },
  "scripts": {
    "build": "node build.mts build",
    "prepublishOnly": "node build.mts validate && node build.mts build",
    "typecheck": "tsc -p .",
    "test": "vitest run --testTimeout=30000"
  },
  "keywords": [
    "logging",
    "sqlite",
    "local",
    "cli"
  ],
  "author": "andyfischer",
  "license": "MIT",
  "packageManager": "pnpm@10.15.1",
  "files": [
    "src",
    "dist",
    "README.md"
  ],
  "dependencies": {
    "@facetlayer/sqlite-wrapper": "^1.2.1",
    "@facetlayer/streams": "^1.0.1",
    "yargs": "18.0.0"
  },
  "devDependencies": {
    "@facetlayer/build-config-nodejs": "^0.3.2",
    "@types/node": "^22.10.2",
    "@types/yargs": "17.0.34",
    "typescript": "^5.7.2",
    "vitest": "^3.0.0"
  }
}
