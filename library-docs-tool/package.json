{
  "name": "@facetlayer/library-docs-tool",
  "version": "0.1.0",
  "description": "CLI tool to find and display documentation files for npm libraries",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "library-docs": "dist/cli.js"
  },
  "scripts": {
    "build": "node build.mts build",
    "prepublishOnly": "node build.mts validate && node build.mts build",
    "typecheck": "tsc -p .",
    "test": "vitest run --testTimeout=30000"
  },
  "keywords": [
    "npm",
    "documentation",
    "library",
    "docs",
    "cli"
  ],
  "author": "andyfischer",
  "license": "MIT",
  "packageManager": "pnpm@10.15.1",
  "files": [
    "src",
    "dist",
    "README.md"
  ],
  "dependencies": {
    "@facetlayer/doc-files-helper": "^0.1.2",
    "@facetlayer/userdata-db": "^0.1.1",
    "yargs": "18.0.0"
  },
  "devDependencies": {
    "@facetlayer/build-config-nodejs": "0.3.1",
    "@types/node": "^22.10.2",
    "@types/yargs": "17.0.34",
    "typescript": "^5.7.2",
    "vitest": "^3.0.0"
  }
}
